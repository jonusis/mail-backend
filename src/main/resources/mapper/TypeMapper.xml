<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mail.Mapper.TypeMapper">
    <select id="queryTypeList" resultType="Type">
        select * from type
    </select>
    <select id="queryTypeById" resultType="Type">
        select * from type where tid = #{tid}
    </select>
    <select id="addType" parameterType="Type">
        insert into type (tid,broadHeading,type,url) values (#{tid},#{broadHeading},#{type},#{url})
    </select>
    <select id="updateType" parameterType="Type">
        update type set tid=#{tid},broadHeading=#{broadHeading},type=#{type},url=#{url}
    </select>
    <select id="deleteType" parameterType="int">
        delete from type where tid = #{tid}
    </select>
    <select id="selectIdMaxType" resultType="int">
        select MAX(tid) from type
    </select>
</mapper>